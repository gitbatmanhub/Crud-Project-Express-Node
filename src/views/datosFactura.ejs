<style>
    #tablaPrecios {
        width: 80%;
        margin: 0 auto;
    }
</style>


<script>
    const precios = document.querySelectorAll('.precio');
    const subtotal = document.getElementById('subPrecio');
    const subtotalMasIva = document.getElementById('ivaPrecio');
    const totalApagar = document.getElementById('totalPrecio');


    let sumSubPrecio = 0;
    let precioIva = 0;
    let total = 0;

    for (let i = 0; i < precios.length; i++) {
        let precioTexto = precios[i].innerHTML;
        let precioSinDolar = precioTexto.replace('$', ''); // Eliminar el carácter "$"
        let precioNumero = parseFloat(precioSinDolar); // Convertir el valor a número
        sumSubPrecio += precioNumero; // Sumar al total
    }
    subtotal.innerText = "$" + sumSubPrecio.toFixed(2);
    precioIva = (sumSubPrecio * 0.12).toFixed(2);
    subtotalMasIva.innerText = "$" + precioIva;


    total = parseFloat(sumSubPrecio) + parseFloat(precioIva);
    console.log(total);
    totalApagar.innerText = "$" + total.toFixed(2);

    const inputConfirm= document.getElementById('totalConfirm');
    inputConfirm.value="$" + total.toFixed(2);

    const estadoFactura= parseInt(document.getElementById('estadoFactura').value);
    const botones= document.querySelectorAll('.btn')
    if (estadoFactura==1){
        for (let i = 0; i < botones.length; i++) {
            botones[i].style.display = "none";
        }
    }
    const inputFactura= document.getElementById('totalFacturaInput');
    inputFactura.value=parseFloat(total.toFixed(2));

</script>