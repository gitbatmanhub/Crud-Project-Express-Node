        </div>
        <div class="mb-3">
            <label for="apellidoCliente" class="form-label">Apellido</label>
            <input type="text" class="form-control" value="<%= datos.apellidoCliente %>" id="apellidoCliente" readonly>
        </div>
        <div class="mb-3">
            <label for="cedulaCliente" class="form-label">Cedula/RUC</label>
            <input type="number" class="form-control" value="0<%= datos.cedulaCliente %>" id="cedulaCliente" readonly>
        </div>
        <div class="mb-3">
            <label for="telefonoCliente" class="form-label">Telefono</label>
            <input type="number" class="form-control" value="0<%= datos.telefonoCliente %>" id="telefonoCliente"
                   readonly>
        </div>

    </form>
</div>

