<script>
    window.onload= function (){



        const precios = document.querySelectorAll('.precio');
        const subtotal = document.getElementById('subtotal');
        const subtotalMasIva = document.getElementById('masIva');
        const totalApagar = document.getElementById('totalPagar');
        const inputTotalFactura = document.getElementById('totalFactura');
        let sumaSubtotal = 0;
        let subTotalIva = 0;
        let totalpagar = 0;


        for (let i = 0; i < precios.length; i++) {
            let precioTexto = precios[i].innerHTML;
            let precioSinDolar = precioTexto.replace('$', ''); // Eliminar el carácter "$"
            let precioNumero = parseFloat(precioSinDolar); // Convertir el valor a número
            sumaSubtotal += precioNumero; // Sumar al total

        }
        subtotal.innerText = "$" + sumaSubtotal.toFixed(2);
        //console.log("Suma subTotal"+ sumaSubtotal);
        subTotalIvaDecimales = sumaSubtotal * 0.12;
        subTotalIva = subTotalIvaDecimales.toFixed(2);
        subtotalMasIva.innerText = "$" + subTotalIva;
        const sub = parseFloat(sumaSubtotal)
        const iva = parseFloat(subTotalIva)
        //console.log(sub+iva)
        totalpagar = sub + iva;
        totalApagar.innerText = "$" + totalpagar.toFixed(2);
        totalpagar=parseFloat(totalpagar.toFixed(2))
        //console.log(totalpagar)
        inputTotalFactura.value = parseFloat(totalpagar);


        //console.log(sumaSubtotal); // La suma total de los valores sin el carácter "$"
        const status= document.getElementById('idStatus');
        const Status= parseInt(status.value)
        //console.log(Status);



        const botonones= document.querySelectorAll('.btn');
        //console.log(botonones);
        if (Status == 2){
            for (let i = 0; i < botonones.length; i++) {
                botonones[i].style.display = "none";
            }
        }







    }


</script>