<div class="modal fade" id="agregarArmazon" tabindex="-1" aria-labelledby="agregarArmazon" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="agregarCliente">Agregar Armazon a Factura</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/agregarArmazon" class="needs-validation" method="post">
                    <div class="mb-3">
                        <label for="nombreCliente" class="form-label">Marca Armazon</label>
                        <select class="form-control" name="idMarca" id="" required>
                            <option disabled selected value="">Elige una marca</option>
                            <% for (const marca of marcas) { %>
                                <option value="<%= marca.idMarca %>"><%= marca.nameMarca %></option>
                            <% } %>

                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="nombreCliente" class="form-label">Marca Armazon</label>
                        <select class="form-control" name="idTamano" id="" required>
                            <option value="">Selecciona un tamaño</option>
                            <% for (const tamano of tamanos) { %>
                                <option value="<%= tamano.idTamano %>"><%= tamano.tamano %></option>
                            <% } %>
                        </select>
                        <input type="hidden" name="idFactura" value="<%= idFactura.id %>"/>
                    </div>


                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="agregarLunas" tabindex="-1" aria-labelledby="agregarLunas" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="agregarCliente">Agregar Lunas a Factura</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/agregarLuna" class="needs-validation" method="post">
                    <div class="mb-3">
                        <label for="nombreCliente" class="form-label">Tipo de Luna</label>
                        <select class="form-control" name="idTipoluna" id="" required>
                            <option disabled selected value="">Elige un tipo de Luna</option>
                            <% for (const tipolunas of tipoluna) { %>
                                <option value="<%= tipolunas.idTipoLuna %>"><%= tipolunas.nameTipoluna %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <input type="hidden" name="idFactura" value="<%= idFactura.id %>"/>
                    </div>


                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="cerrarFactura" tabindex="-1" aria-labelledby="cerrarFactura" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="cerrarFactura">Cerrar Factura</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <p style="text-align: center">¿Está seguro de cerrar la presente factura? Tenga en cuenta que una
                        vez haga clic en 'Aceptar', no podrá editar los valores ingresados. Confirme su elección y
                        asegúrese de revisar cuidadosamente la información antes de continuar.</p>
                </div>
                <form action="/cerrarFactura" method="post" novalidate>
                    <div class="mb-3">

                        <input type="hidden" name="idFactura" value="<%= idFactura.id %>"/>
                        <input id="totalFactura" type="hidden" name="totalFactura" value="">
                    </div>
                    <div class="mb-3" style="margin: 0 auto; text-align: center">
                        <button type="submit" class="btn btn-primary">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="datos">
    <div class="d-grid d-sm-flex justify-content-sm-center">
        <h3>Datos del cliente</h3>

    </div>
    <div class="d-grid d-sm-flex justify-content-sm-center">
        <h3><%= datos.Fecha %></h3>

    </div>
    <form id="datosCliente">

        <div class="mb-3">
            <label for="nameCliente" class="form-label">Nombre</label>
